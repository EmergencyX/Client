<Window x:Name="mainWindow" x:Class="EmergencyX_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmergencyX_Client"
        mc:Ignorable="d"
        Title="Emergency Explorer" Height="900" Width="1250" SizeToContent="WidthAndHeight">
    <Grid>
        <Label x:Name="appHeadline" Content="Emergency X" HorizontalAlignment="Left" Margin="41,31,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Calibri" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Cursor="Arrow">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-7.853"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="198" Margin="1012,10,0,0" VerticalAlignment="Top" Width="220">
            <Button BorderBrush="#FF3C3838" Content="Anmelden" ToolTip="Anmeldung durchführen" Margin="4" BorderThickness="3,1,1,1" Background="#FFDDDDDD" Padding="5"/>
        </Menu>

    </Grid>
</Window>
